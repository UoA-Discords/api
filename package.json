{
    "name": "uoa-discords-api",
    "private": true,
    "workspaces": [
        "shared"
    ],
    "version": "1.0.0",
    "main": "build/index.js",
    "repository": "https://github.com/UoA-Discords/api.git",
    "author": "NachoToast <32235595+NachoToast@users.noreply.github.com>",
    "license": "MIT",
    "scripts": {
        "dev": "nodemon src/index.ts --devmode",
        "start": "node .",
        "lint": "eslint --ext .ts src --max-warnings=0",
        "build": "tsc -p tsconfig.build.json",
        "typecheck": "tsc -p tsconfig.build.json --noEmit",
        "check:config": "ts-node scripts/validateConfig.ts",
        "test": "jest",
        "check-all": "yarn lint && yarn typecheck && yarn test"
    },
    "dependencies": {
        "axios": "^0.27.2",
        "cors": "^2.8.5",
        "discord-api-types": "^0.37.0",
        "express": "^4.18.1",
        "express-openapi-validator": "^4.13.8",
        "express-rate-limit": "^6.5.1",
        "jsonwebtoken": "^8.5.1",
        "swagger-ui-express": "^4.5.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jest": "^28.1.6",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/node": "^18.6.3",
        "@types/supertest": "^2.0.12",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "^5.32.0",
        "@typescript-eslint/parser": "^5.32.0",
        "eslint": "^8.21.0",
        "eslint-config-prettier": "^8.5.0",
        "jest": "^28.1.3",
        "nodemon": "^2.0.19",
        "prettier": "^2.7.1",
        "supertest": "^6.2.4",
        "ts-jest": "^28.0.7",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
    },
    "nodemonConfig": {
        "watch": [
            "src",
            "config.json",
            "openapi.json"
        ],
        "ext": "ts",
        "ignore": [
            "**/*.test.ts"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "modulePathIgnorePatterns": [
            "shared/"
        ]
    }
}
